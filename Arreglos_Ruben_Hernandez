#include <iostream>
using namespace std;
int main()
{
    {
        int i, suma = 0, media;
        // Programa que pida 10 números, calcule su media y luego muestre los que están por encima de la media.
        int arreglo[9];
        cout << "Introduce 10 numeros: ";
        for (i = 0; i < 9; i++)
        {
            cout << "Introduce el " << i + 1 << " digito: ";
            cin >> arreglo[i];
        }

        for (i = 0; i < 9; i++)
        {
            suma += arreglo[i];
        }

        media = suma / 10;

        cout << "La media es: " << media;

        cout << "Los numeros mayores de la media son: ";
        for (i = 0; i < 9; i++)
        {

            if (arreglo[i] > media)

            {
                cout << arreglo[i];
            }
        }
    }
}

