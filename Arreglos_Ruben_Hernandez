#include <iostream>
using namespace std;
int main()
{
    // Programa que pida 10 números y los muestre en orden inverso al que fueron agregados.
    int arreglo[9];
        cout << "Ingresa 10 numeros";
    for (int i = 0;  i<= 9; i++)
        cin >> arreglo[i];
    for (int i = 0; i >= 9; i++)
        cout << arreglo[i];
    cout << "\n";
    for (int i = 9; i >= 0; i--)
        cout << arreglo[i];
}

