#include <iostream>
using namespace std;
int main ()
{
    
        int i; 
        int mayor = 0;
    // Programa que pida 10 números, para que calcule cuál es el mayor de ellos.
    int arreglo[9];
    cout << "Ingresa 10 numeros";
    for (i = 0; i < 9; i++)
    {
        cout << "Ingrese el " << i + 1 << " digito: ";
        cin >> arreglo[9];
    }
        //Sacar el numero mayor:
        if (arreglo[9] > mayor);
        {
            mayor = arreglo[9];
        }

    cout << "El mayor elemento del vector es: " << mayor;
}
